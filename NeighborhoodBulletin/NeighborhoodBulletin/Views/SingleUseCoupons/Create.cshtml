@model Domain.SingleUseCoupon

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>SingleUseCoupon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @using (Html.BeginForm("Create", "SingleUseCoupons", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="file" id="myFile">

                <label asp-for="LastSpent" class="control-label" />
                <input asp-for="LastSpent" class="form-control" />
                <span asp-validation-for="LastSpent" class="text-danger"></span>

                <input type="submit" value="Create" class="btn btn-default" />
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
